<h1>Your Cart</h1>

<% if notice %>
  <p><%= notice %></p> 
<% end %>


<% @current_cart.line_items.each do |line_item| %>
  <p><%= link_to line_item.item.title, item_path(line_item.item) %> | <%= number_to_currency(line_item.item.price.to_f/100 * line_item.quantity) %> | Quantity: <%= line_item.quantity %> | <% if line_item.item.inventory < 5 %>
    <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
  <% end %> </p>
<% end %>

<p>Order total: <strong><%= number_to_currency(@current_cart.total.to_f/100) %></strong> </p>

<% if @current_cart.status == 'not submitted' %>
<%= button_to 'Checkout', checkout_path %>
<% end %>